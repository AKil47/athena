{
  "name": "electron-browser",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"npm run electron-dev\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "wait-on http://localhost:3000 && electron .",
    "electron-pack": "electron-builder -c.extraMetadata.main=main.js",
    "preelectron-pack": "next build"
  },
  "type": "module",
  "build": {
    "appId": "com.electron.browser",
    "files": [
      "*.js",
      "build",
      "node_modules"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^12.4.3",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "openai": "^4.85.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/electron": "^1.6.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
